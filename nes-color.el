(defconst nes/colors
  (map 'vector
       (lambda (color)
         (let ((normalize0 (/ (nth 0 color) 255.0))
               (normalize1 (/ (nth 1 color) 255.0))
               (normalize2 (/ (nth 2 color) 255.0)))
           `(
             ((glyph colorize)
              (t ? ))

             ((color-x color-x)
              (color-tty color-tty)
              (t mono-tty))

             (((glyph color-x) [,normalize0 ,normalize1 ,normalize2])
              (color-tty ,(format "#%02X%02X%02X" (nth 0 color)
                                                  (nth 1 color)
                                                  (nth 2 color)))
              )))
         )
       nes/color:COLORS
       ))

